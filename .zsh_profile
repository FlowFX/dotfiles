# pipsi
export PATH=$HOME/.local/bin:$PATH

# heroku CHI
#export HEROKU_ORGANIZATION=chi-deutschland

# ADB Fastboot
if [ -d "$HOME/bin/adb-fastboot/platform-tools" ] ; then
    export PATH="$HOME/bin/adb-fastboot/platform-tools:$PATH"
fi

# Python
if [ -d "$HOME/.virtualenvs" ] ; then
    export WORKON_HOME=$HOME/.virtualenvs
    export PROJECT_HOME=$HOME/code
    export VIRTUALENVWRAPPER_PYTHON=$HOME/.pyenv/shims/python
fi

# rbenv
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"

# LESS with colors
export LESSOPEN="| src-hilite-lesspipe.sh %s"
export LESS=" -R "

# Escape mapping. We want caps lock to act as Escape when tapped, and as
# Control when pressed down.
#
# This is OS dependant
# cf. https://stackoverflow.com/a/8597411
if [[ "$OSTYPE" == "linux-gnu" ]]; then
  setxkbmap -option "caps:ctrl_modifier"
  xcape -e "Caps_Lock=Escape"
fi

# Secret extra configurations
[[ -f ~/.profile ]] && source ~/.profile
