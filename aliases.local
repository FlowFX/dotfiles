# Unix
alias psgrep='ps aux | grep '
alias tx='tmuxinator'
alias vim='nvim'

# Email
alias m="LOCAL_CONFIG=personal neomutt"

# Todo
alias t="todo"
alias tn="todo new"
alias te="todo edit"
alias td="todo delete"

# Git
alias g="git"
alias wip="git commit -am'WIP'"
alias stu="( cd ~/code && git standup -s )"
# https://stevenharman.net/git-clean-delete-already-merged-branches
alias gdm='git branch --merged | grep -v "\*" | xargs -n 1 git branch -d'

# hub
alias hs="hub sync"
alias hpr="hub pull-request -a FlowFX -l 'playing around'"
alias hco="hub pr checkout"
alias hbi="hub browse -- issues"
alias hbp="hub browse -- pulls"

# Ruby
alias be="bundle exec"
alias bi="bundle install"
alias bis="bundle install --standalone --path .bundle"
alias yi="yarn install"

# Rails
alias rc="bundle exec rails console"
alias rs="bundle exec rails server"
alias rt="bundle exec rails test"
alias berp="bin/rails parallel:spec"
alias respring="spring stop && spring server &>/dev/null &"

# Rails database
# `migrate` is defined in ~/.aliases
alias rdm='migrate'
alias rdr='rake db:rollback'

# work deploys
alias dcon='./deploy console -e'
alias dstatus='./deploy migrate_status -e'
alias dmigrate='./deploy migrate -e'
alias ddeploy='./deploy deploy -e'
alias uplang='./scripts/upload_locales_to_lokalise.sh'
alias downlang='./scripts/download_locales_from_lokalise.sh'
