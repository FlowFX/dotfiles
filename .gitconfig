# copied from github.com/scy
[user]
	name = Florian Posdziech
	email = hallo@flowfx.de
[core]
	excludesfile = /Users/flowfx/.gitignore_global
	autocrlf = false
    editor = 'nvim'
[color]
	ui = auto
[diff]
	mnemonicprefix = true
[interactive]
	singlekey = true
[merge]
	tool = vimdiff
	conflictstyle = diff3
[rebase]
	autosquash = true
[alias]
	a = add
	ae = add -e
	alias = !git config --get-regexp '^alias\\.' | sed -e 's/^alias\\.//' -e 's/ /\t/'
	am = am
	ap = add -p
	b = branch
	bash = !bash
	c = commit
	ca = commit -a
	cf = changed-files
	co = checkout
	cob = checkout -b
	com = checkout master
	cod = checkout development
	cop = checkout -p
	d = diff
	db = default-branch checkout
	dbm = default-branch merge
	dbr = default-branch rebase
	dc = diff --cached
	f = fetch
	find = !find . -not -path './.git/*'
	fp = format-patch --stdout --thread -C @{u}
	fpp = !git fp >"$HOME/tmp/$(date +%Y-%m-%d-%H%M%S-scy-git-patch.txt)"
	k = "!gitk --all; cd \"$HOME\"; git checkout .gitk; cd - >/dev/null"
	l = log --pretty=format:'%C(yellow bold)commit %H%Creset %C(yellow)tree %T%Creset%nAuthor: %an <%ae>%nDate: %ad%n%n%w(76,4,4)%s%n%n%-b%n'
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset' --abbrev-commit --date=relative
	lp = log --pretty=format:'%C(yellow bold)commit %H%Creset %C(yellow)tree %T%Creset%nAuthor: %an <%ae>%nDate: %ad%n%n%w(76,4,4)%s%n%n%-b%n' -p
	ls = log --pretty=format:'%C(yellow bold)commit %H%Creset %C(yellow)tree %T%Creset%nAuthor: %an <%ae>%nDate: %ad%n%n%w(76,4,4)%s%n%n%-b%n' --stat
	oops = oops
	p = push
	pr = pull --rebase
	rb = rebase
	rbi = rebase -i
	rbm = rebase master
	rbo = rebase origin
	s = status
	sm = submodule
	sd = !bash -c 'time git svn dcommit'
	sf = svn fetch
	sr = svn rebase
	sfr = !git sf && git sr
	st = stash
	stp = stash pop
	branches = !legit branches
	publish = !legit publish
	unpublish = !legit unpublish
	sync = !legit sync
	switch = !legit switch
	resync = !legit resync
	undo = !legit undo
	up = pull --rebase --autostash
[url "git@github.com:"]
	insteadOf = github:
[url "https://github.com/"]
	insteadOf = gitpub:
[branch "master"]
	mergeoptions = --no-ff
[branch "development"]
	mergeoptions = --no-ff
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = simple
#[commit]
	#template = /Users/flowfx/.stCommitMsg
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[github]
	user = flowfx
[ghi]
	token = !security find-internet-password -a flowfx -s github.com -l 'ghi token' -w
