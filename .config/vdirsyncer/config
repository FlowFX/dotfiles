[general]
status_path = "~/.vdirsyncer/status/"

[pair mailbox]
a = "mailbox_local"
b = "mailbox_remote"
collections = ["from a", "from b"]

[storage mailbox_local]
type = "filesystem"
path = "~/.contacts/mailbox/"
fileext = ".vcf"

[storage mailbox_remote]
type = "carddav"
url = "https://dav.mailbox.org"
username = "flowfx@mailbox.org"
# Need to install the Python `keyring` package (https://github.com/jaraco/keyring/)
password.fetch = ["command", "/Users/flowfx/.pyenv/shims/keyring", "get", "dav.mailbox.org", "flowfx@mailbox.org"]
