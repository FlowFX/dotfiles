# flowfx@posteo.de

set from      = "hallo@flowfx.de"
set sendmail  = "msmtp -a posteo"
set mbox      = "+posteo/Archive"
set postponed = "+posteo/Drafts"
set record    = "+posteo/Sent" 
set trash     = "+posteo/Trash"

macro index,pager A "<save-message>+posteo/Archive<enter>" "Moved message to the archive"
macro index,pager S "<save-message>+posteo/Junk<enter>"    "Marked message as spam"
