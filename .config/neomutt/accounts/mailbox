# flowfx@mailbox.org

set from      = "flowfx@mailbox.org"
set sendmail  = "msmtp -a mailbox"
set mbox      = "+mailbox/Archive"
set postponed = "+mailbox/Drafts"
set record    = "+mailbox/Sent"
set trash     = "+mailbox/Trash"

macro index A "<save-message>+mailbox/Archive<enter>" "Moved message to the archive"
macro index S "<save-message>+mailbox/Junk<enter>"    "Marked message as spam"

alternates florian@posdziech.de
