# flowfx@mailbox.org

set from      = "flowfx@mailbox.org"
set sendmail  = "msmtp -a mailbox"
set mbox      = "+mailbox/Archive"
set postponed = "+mailbox/Drafts"
set record    = "+mailbox/Sent" 

macro index a "<save-message>+mailbox/Archive<enter>" "move message to the archive"
macro index d "<save-message>+mailbox/Trash<enter>"   "move message to the trash"
macro index S "<save-message>+mailbox/Junk<enter>"    "mark message as spam"
