# flowfx@c3s.cc

set from      = "flowfx@c3s.cc"
set sendmail  = "msmtp -a C3S"
set mbox      = "+C3S/Archive"
set postponed = "+C3S/Drafts"
set record    = "+C3S/Sent Messages"
set trash     = "+C3S/Deleted Messages"

macro index A "<save-message>+C3S/Archive<enter>" "Moved message to the archive"
macro index S "<save-message>+C3S/Junk<enter>"    "Marked message as spam"
