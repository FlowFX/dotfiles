# f.posdziech@chi-deutschland.com

set from      = "f.posdziech@chi-deutschland.com"
set sendmail  = "msmtp -a CHI"
set mbox      = "+CHI/[Gmail]/All Mail"
set postponed = "+CHI/[Gmail]/Drafts"
unset record

color status red default

macro index D \
    "<save-message>+CHI/Trash<enter>" \
    "move message to the trash"

macro index S \
    "<save-message>+CHI/Spam<enter>"  \
        "mark message as spam"
