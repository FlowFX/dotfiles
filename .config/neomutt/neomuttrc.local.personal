color status color0 color2

set folder      = ~/Mail
set spoolfile   = "+mailbox/INBOX"    # Set mailbox as the default account

set signature="~/.config/neomutt/signatures/personal"

set sidebar_new_mail_only = yes

folder-hook mailbox/* source ~/.config/neomutt/accounts/mailbox
folder-hook C3S/*     source ~/.config/neomutt/accounts/C3S


mailboxes "+C3S" "+mailbox"
mailboxes "/var/mail/flowfx"
source "~/.config/neomutt/mailboxes"


sidebar_whitelist "+C3S" "+mailbox" "+mailbox/INBOX" "+C3S/INBOX"
