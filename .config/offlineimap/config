# ~/.offlineimaprc

[general]
accounts = mailbox, posteo, C3S, CHI
pythonfile = ~/.config/offlineimap/offlineimap.py
ui = basic

# Automatic mailbox generation for mutt
[mbnames]
enabled = yes
filename = ~/.config/neomutt/mailboxes
header = "mailboxes "
peritem = "+%(accountname)s/%(foldername)s"
sep = " "
footer = "\n"

[Account mailbox]
localrepository = mailbox-local
remoterepository = mailbox-remote

[Account posteo]
localrepository = posteo-local
remoterepository = posteo-remote

[Account C3S]
localrepository = C3S-local
remoterepository = C3S-remote

[Account CHI]
localrepository = CHI-local
remoterepository = CHI-remote

[Repository mailbox-local]
type = Maildir
localfolders = ~/Mail/mailbox

[Repository mailbox-remote]
type = IMAP
remotehost = imap.mailbox.org
remoteuser = flowfx@mailbox.org
remotepasseval = get_pass("flowfx@mailbox.org", "imap.mailbox.org")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem

[Repository posteo-local]
type = Maildir
localfolders = ~/Mail/posteo

[Repository posteo-remote]
type = IMAP
remotehost = posteo.de
remoteuser = flowfx@posteo.de
remotepasseval = get_pass("flowfx@posteo.de", "posteo.de")
ssl = yes
sslcacertfile = /usr/local/etc/openssl/cert.pem

[Repository C3S-local]
type = Maildir
localfolders = ~/Mail/C3S

[Repository C3S-remote]
type = IMAP
remotehost = imap.c3s.cc
remoteuser = florian.posdziech@c-3-s.org
remotepasseval = get_pass("florian.posdziech@c-3-s.org", "imap.c3s.cc")
ssl = yes
cert_fingerprint = 70D7041304B4B3B4D80478DA14C601296F29833CBFEC2501FD640E1568E339DE


[Repository CHI-local]
type = Maildir
localfolders = ~/Mail/CHI

[Repository CHI-remote]
type = Gmail
remoteuser = f.posdziech@chi-deutschland.com
remotepasseval = get_pass("f.posdziech@chi-deutschland.com", "imap.gmail.com")
realdelete = no
#nametrans = lambda foldername: re.sub ('^\[gmail\]', 'bak',
                               #re.sub ('sent_mail', 'sent',
                               #re.sub ('starred', 'flagged',
                               #re.sub (' ', '_', foldername.lower()))))
folderfilter = lambda foldername: foldername not in ['[Gmail]/All Mail']
sslcacertfile = /usr/local/etc/openssl/cert.pem
